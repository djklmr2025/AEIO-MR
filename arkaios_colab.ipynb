# --- FUNCIÃ“N PARA VERIFICAR ESTADO ---
def monitor_server():
    """Monitorea que el servidor estÃ© activo"""
    import requests
    while True:
        try:
            response = requests.get('http://127.0.0.1:5000/health', timeout=5)
            print(f"âœ… Servidor saludable ({response.status_code}) - {time.strftime('%H:%M:%S')}")
        except:
            print("âš ï¸  Servidor no responde - Reiniciando...")
            os.system('pkill -f server_arkaios.py')
            run_server()
            time.sleep(10)
        time.sleep(60)

